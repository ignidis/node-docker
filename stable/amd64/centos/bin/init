#!/bin/sh
#
#
#
# Initialize anonymous user (openshift service account)
#
if ! whoami &> /dev/null; then
    if [ -w /etc/passwd ]; then
        echo "${USER_NAME:-svcacct}:x:$(id -u):0:${USER_NAME:-svcacct} user:${HOME:-/var/lib/node}:/sbin/nologin" >> /etc/passwd
    fi
fi
#
# Start the command
#
cd ~;
exec "$@";
